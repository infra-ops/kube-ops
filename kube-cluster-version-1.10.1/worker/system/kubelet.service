[Unit]
Description=kubelet: The Kubernetes Node Agent
Documentation=http://kubernetes.io/docs/

[Service]
ExecStart=/opt/bin/kubelet --kubeconfig=/opt/bin/kubeconfig    --address=0.0.0.0  --hostname_override=172.17.8.103  --cluster-dns=10.254.0.20,8.8.8.8  --cluster-domain=cluster.local --network-plugin=cni --cni-conf-dir=/etc/cni/net.d --cni-bin-dir=/opt/cni/bin --v=0

Restart=always
StartLimitInterval=0
RestartSec=10

[Install]
WantedBy=multi-user.target

